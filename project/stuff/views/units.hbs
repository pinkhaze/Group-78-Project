<div class="container">
  <div class="content">
    <h3>UNITS</h3>
  </div>
     {{!-- Create table --}}
    <table id="utility-providers-table" class="table is-bordered is-striped is-fullwidth">
        {{!-- Table header --}}
        <thead>
            {{!-- Iterate over keys of the first row and print current key in header cell --}}
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        {{!-- Table body --}}
        <tbody>
            {{!-- Citation for the following table:
                  Date: 11/15/23
                  Based on: nodejs-starter-app
                  Source URL: https://github.com/osu-cs340-ecampus/nodejs-starter-app/tree/main/Step%205%20-%20Adding%20New%20Data
            --}}
            {{!-- For each row, print the provider_ID, provider_name, service_type, and utility_cost --}}
            {{#each data}}
            <tr data-value={{this.provider_ID}}>
                <td>{{this.unit_ID}}</td>
                <td>{{this.is_available}}</td>
                <td>{{this.num_bedroom}}</td>
                <td>{{this.num_bathroom}}</td>
                <td>{{this.square_feet}}</td>
                <td>{{this.unit_number}}</td>
                <td>{{this.rent_price}}</td>
                <td>{{this.previous_year_income}}</td>
                {{!-- Edit and delete buttons --}}
                <td>
                    <button onClick="update({{this.provider_ID}})">
                        <i class="fa-sharp fa-solid fa-pen-to-square"></i>
                    </button>
                </td>
                <td>
                    <button onclick="deleteUtilityProvider({{this.provider_ID}})">
                         <i class="fa-sharp fa-regular fa-trash-can"></i>
                    </button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
  </div>
  <p>&nbsp;</p>
  <div class="container">
    <div id="insert" style="display: block">
      <form id="addUnit">
        <legend><strong>Add Unit</strong></legend>
          <fieldset class="fields">
            <label for="isavailable">is_available</label>
            <select name="isavailable" id="isavailable">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>
            <label>num_bedrooms</label> <input type="number" name="numbedrooms">
            <label>num_bathrooms</label> <input type="number" name="numbathrooms">
            <label>square_feet</label> <input type="text" name="squarefeet">
            <p>&nbsp;</p>
            <label>unit_number</label> <input type="number" name="rentprice">
            <label>rent_price</label> <input type="text" name="language">
            <label>previous_year_income</label> <input type="text" name="prevyearincome">
            <label>year</label> <input type="number" name="year">
          </fieldset>
          <p>&nbsp;</p>
          <input class="button is-black" type="submit" id="Unit" value="AddUnit">
          <input class="button is-black" type="button" value="Cancel">
      </form>
    </div>
    <p>&nbsp;</p>
    <div id="update" style="display: block">
      <form id="updateUnit">
        <legend><strong>Update Unit</strong></legend>
          <fieldset class="fields">
            <label>unit_ID</label> 
            <input type="number" name="unitid">
            <label for="isavailable">is_available</label>
            <select name="isavailable" id="isavailable">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>
            <label>num_bedrooms</label> <input type="number"  name="numbedrooms" value="">
            <label>num_bathrooms</label> <input type="number" name="numbathrooms" value="">
            <label>square_feet</label> <input type="text" name="squarefeet" value="">
            <p>&nbsp;</p>
            <label>unit_number</label> <input type="number" name="unitnum">
            <label>rent_price</label> <input type="text" name="rentprice">
            <label>previous_year_income</label> <input type="text" name="prevyearincome">
            <label>year</label> <input type="number" name="year">
          </fieldset>
          <p>&nbsp;</p>
          </fieldset>
          <input class="button is-black" type="submit" id="UpdateUnit" value="Save Unit">
          <input class="button is-black" type="button" value="Cancel" >
      </form> 
    </div>
    <p>&nbsp;</p>
    <div id="delete" style="display: block">
      <form method="POST" id="deleteUnit">
        <legend><strong>Delete Unit</strong></legend>
          <fieldset class="fields">
          <p>Do you want to delete this unit?</p>
          <p>&nbsp;</p>
          <input type="hidden" name="unitID" id="deleteunitID" value="1">
          <label><strong>Unit ID:</strong></label> 1
          <label> <strong>Unit Number:</strong> </label> 1  
        </fieldset>
        <p>&nbsp;</p>
        <input class="button is-black" type="submit" id="DeleteUnit" value="Delete Unit">
        <input class="button is-black" type="button" value="Cancel" onClick="browseUnit()">
      </form> 
    </div>
  </div>